@using DodjelaStanovaZG.Components.Layout
@using Microsoft.AspNetCore.Components.Authorization
@using MudBlazor

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <MudAlert Severity="Severity.Error" Variant="Variant.Filled" Dense="true" Class="ma-4">
                        Nemate ovlasti za pristup ovoj stranici.
                    </MudAlert>
                </NotAuthorized>
                <Authorizing>
                    <MudProgressCircular Indeterminate="true" Color="Color.Primary" Size="Size.Large" />
                </Authorizing>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <MudAlert Severity="Severity.Warning" Variant="Variant.Filled" Dense="true" Class="ma-4">
                    Stranica nije pronađena.
                </MudAlert>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Routing

<NavLink href="@Href"
         class="flex items-center gap-2 px-3 py-2 text-xs font-bold uppercase rounded-lg hover:bg-[#163d73] transition-colors duration-200 whitespace-nowrap"
         style="@Style">
    @if (UseLogoutIcon)
    {
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
        </svg>
    }
    @Text
</NavLink>

@code {
    /// <summary>
    /// URL na koji vodi navigacijski link.
    /// </summary>
    [Parameter]
    public string Href { get; set; } = "#";

    /// <summary>
    /// Tekst koji će biti prikazan unutar navigacijskog linka.
    /// </summary>
    [Parameter]
    public string Text { get; set; } = "";

    /// <summary>
    /// Boja teksta. Zadana vrijednost je bijela.
    /// </summary>
    [Parameter]
    public string TextColor { get; set; } = "#ffffff";

    /// <summary>
    /// Određuje hoće li se prikazati ikona za odjavu.
    /// </summary>
    [Parameter]
    public bool UseLogoutIcon { get; set; } = false;

    /// <summary>
    /// Inline stil koji primjenjuje zadanu boju teksta.
    /// </summary>
    private string Style => $"color: {TextColor};";
}

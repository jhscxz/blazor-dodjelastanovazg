@using System.Globalization
@using MudBlazor

@if (CreatedAt != default)
{
    <MudDivider Class="my-2" />

    <MudStack Row="true" Spacing="3" AlignItems="AlignItems.Center">
        <MudText Typo="Typo.overline">
            Stvorio: <b>@(CreatedByUserName ?? CreatedBy ?? "-")</b>
            (@CreatedAt.ToLocalTime().ToString("dd.MM.yyyy. HH:mm:ss", CultureInfo.CurrentCulture))
        </MudText>

        <MudText Typo="Typo.overline">
            | Zadnje ureÄ‘ivao: <b>@(UpdatedByUserName ?? UpdatedBy ?? "-")</b>
            (@(UpdatedAt?.ToLocalTime().ToString("dd.MM.yyyy. HH:mm:ss", CultureInfo.CurrentCulture) ?? "-"))
        </MudText>
    </MudStack>
}

@code {
    [Parameter] public string? CreatedBy { get; set; }
    [Parameter] public string? CreatedByUserName { get; set; }
    [Parameter] public DateTime CreatedAt { get; set; }

    [Parameter] public string? UpdatedBy { get; set; }
    [Parameter] public string? UpdatedByUserName { get; set; }
    [Parameter] public DateTime? UpdatedAt { get; set; }
}
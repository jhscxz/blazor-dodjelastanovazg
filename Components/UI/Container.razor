@code {
    [Parameter] public string Title { get; set; } = string.Empty;
    [Parameter] public string? Description { get; set; } // Opcionalni opis
    [Parameter] public List<Breadcrumbs.BreadcrumbItem> BreadcrumbItems { get; set; } = new();
    [Parameter] public RenderFragment? ChildContent { get; set; }
}

<div class="w-full max-w-[115rem] mx-auto bg-white rounded shadow-sm border border-gray-300 pt-3 pb-4 px-4 h-fit">
    <!-- Header -->
    <div class="flex justify-between items-center h-fit">
        <div class="flex flex-col leading-tight gap-y-0">
            <p class="text-base font-bold text-gray-900">@Title</p>
            @if (!string.IsNullOrEmpty(Description))
            {
                <p class="text-gray-600 text-xs">@Description</p>
            }
        </div>
        <div class="h-fit text-xs">
            <Breadcrumbs Items="BreadcrumbItems" />
        </div>
    </div>

    <!-- Horizontal Line -->
    <div class="border-t border-gray-300 mt-2 mb-4"></div>

    <!-- Main Content -->
    <div>
        @ChildContent
    </div>
</div>

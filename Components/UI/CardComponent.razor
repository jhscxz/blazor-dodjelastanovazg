@* Komponenta "Card" koja prikazuje naslov, opis, opcionalni sadržaj te gumb s definiranim akcijama *@
<div class="max-w-sm mx-auto bg-white rounded shadow-md p-6">
    <h5 class="text-lg font-semibold text-gray-900 mb-2">@Title</h5>
    <p class="text-sm text-gray-500 mb-4">@Description</p>

    @if (ChildContent != null)
    {
        <div class="mb-4">
            @ChildContent
        </div>
    }

    <button class="w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
            @onclick="OnClick">
        @ButtonText
    </button>
</div>

@code {
    /// <summary>
    /// Naslov kartice.
    /// </summary>
    [Parameter]
    public string Title { get; set; } = "Naslov kartice";

    /// <summary>
    /// Opis kartice.
    /// </summary>
    [Parameter]
    public string Description { get; set; } = "Opis kartice";

    /// <summary>
    /// Tekst na gumbu.
    /// </summary>
    [Parameter]
    public string ButtonText { get; set; } = "Pregled";

    /// <summary>
    /// Akcijski callback koji se poziva pri kliku na gumb.
    /// </summary>
    [Parameter]
    public EventCallback OnClick { get; set; }

    /// <summary>
    /// Opcionalni sadržaj koji se može umetnuti unutar kartice.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}

@using DodjelaStanovaZG.Enums
@using MudBlazor

<MudRadioGroup T="int?" @bind-SelectedOption="Value" @bind-SelectedOption:event="ValueChanged">
    <MudRadio T="int?" Option="@( (int?)RezultatObrade.Nepotpun )" Label="NEPOTPUN" />
    <MudRadio T="int?" Option="@( (int?)RezultatObrade.Neosnovan )" Label="NEOSNOVAN" />
    <MudRadio T="int?" Option="@( (int?)RezultatObrade.Zadovoljava )" Label="ZADOVOLJAVA" />
</MudRadioGroup>

@code {
    [Parameter] public int? Value { get; set; }
    [Parameter] public EventCallback<int?> ValueChanged { get; set; }
}
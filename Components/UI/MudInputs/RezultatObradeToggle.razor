@using MudBlazor
@using DodjelaStanovaZG.Enums

<!-- RezultatObradeToggle.razor -->
<MudStack Row="true" Spacing="2" Class="mt-4 mb-6">
    <MudToggleGroup T="RezultatObrade?"
                    SelectionMode="SelectionMode.ToggleSelection"
                    @bind-Value="Value"
                    Color="Color.Dark"
                    CheckMark>
        <MudToggleItem Value="@RezultatObrade.Nepotpun" Text="NEPOTPUN" />
        <MudToggleItem Value="@RezultatObrade.Neosnovan" Text="NEOSNOVAN" />
        <MudToggleItem Value="@RezultatObrade.Zadovoljava" Text="ZADOVOLJAVA" />
    </MudToggleGroup>
</MudStack>

@code {
    [Parameter] public RezultatObrade? Value { get; set; }
    [Parameter] public EventCallback<RezultatObrade?> ValueChanged { get; set; }
}

@inherits LayoutComponentBase

<nav aria-label="Breadcrumb" class="flex items-center space-x-2 text-sm">
    @if (Items != null && Items.Any())
    {
        @foreach (var item in Items.Select((value, index) => (value, index)))
        {
            <span>
                <a href="@item.value.Url" class="text-blue-600 hover:underline">
                    @item.value.Text
                </a>
            </span>

            @if (item.index < Items.Count() - 1)
            {
                <span class="text-gray-400">/</span>
            }
        }
    }
</nav>

@code {
    [Parameter]
    public List<BreadcrumbItem> Items { get; set; }
    public class BreadcrumbItem
    {
        public string Text { get; set; }
        public string Url { get; set; }
    }
}


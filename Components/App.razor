@using DodjelaStanovaZG.Components.Layout
@using Microsoft.AspNetCore.Components.Authorization
@using MudBlazor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />

    <!-- 1) Tailwind (koji uključuje reset/preflight) -->
    <link rel="stylesheet" href="css/tw.min.css" />
    <link rel="stylesheet" href="css/tailwind.css" />

    <!-- 2) Bootstrap i/ili MudBlazor -->
    <link rel="stylesheet" href="_content/MudBlazor/MudBlazor.min.css" />
    @*<link rel="stylesheet" href="@Assets["lib/bootstrap/dist/css/bootstrap.min.css"]" />*@

    <!-- 3) Vaš custom CSS (ako imate) -->
    <link rel="stylesheet" href="@Assets["app.css"]" />
    <link rel="stylesheet" href="@Assets["DodjelaStanovaZG.styles.css"]" />
    <ImportMap />
    <link rel="icon" type="image/png" href="favicon.png" />
    
    <!-- Koristimo InteractiveServer render mode -->
    <HeadOutlet @rendermode="RenderMode.InteractiveServer" />
</head>
<body>
<CascadingAuthenticationState>
    <Routes @rendermode="RenderMode.InteractiveServer" />
</CascadingAuthenticationState>
    
<script src="_framework/blazor.web.js"></script>
<!-- MudBlazor JS -->
<script src="_content/MudBlazor/MudBlazor.min.js"></script>
</body>
</html>
@page "/socijalni/dodaj/{NatjecajId:long}"
@using DodjelaStanovaZG.Components.UI
@using MudBlazor
@using System.Globalization
@using DodjelaStanovaZG.Enums
@using DodjelaStanovaZG.Components.UI.MudInputs

<Container BreadcrumbItems="BreadcrumbItems">
    <MudGrid Justify="Justify.Center" Spacing="2">
        <MudItem xs="12" sm="6" md="4">
            <MudCard Outlined="true" Rounded="true" Class="pa-6 border border-gray-300">
                <MudCardContent>

                    @if (ErrorMessages?.Any() == true)
                    {
                        <MudAlert Severity="Severity.Error" Class="mb-4">
                            <ul>
                                @foreach (var msg in ErrorMessages)
                                {
                                    <li>@msg</li>
                                }
                            </ul>
                        </MudAlert>
                    }

                    <MudForm @ref="_form" Model="@ZahtjevModel">
                        
                        <!-- Prvi red: Klasa predmeta i Datum podnošenja zahtjeva u dva stupca -->
                        <MudGrid Gutter="Size.None" Spacing="2">
                            <MudItem xs="12" sm="6">
                                <TextInput T="int?" Label="Klasa predmeta" @bind-Value="ZahtjevModel.KlasaPredmeta" Required="true"/>
                            </MudItem>
                            <MudItem xs="12" sm="6">
                                <DateInput T="DateTime?" @bind-Value="ZahtjevModel.DatumPodnosenjaZahtjeva" Label="Datum podnošenja" Required="true" />
                            </MudItem>
                        </MudGrid>

                        <!-- Drugi red: Ime i prezime i Adresa u dva stupca -->
                        <MudGrid Gutter="Size.None" Spacing="2">
                            <MudItem xs="12" sm="6">
                                <TextInput T="string" Label="Ime i prezime" @bind-Value="ZahtjevModel.ImePrezime" Required="true"/>
                            </MudItem>
                            <MudItem xs="12" sm="6">
                                <TextInput T="string" Label="Adresa" @bind-Value="ZahtjevModel.Adresa" Required="true"/>
                            </MudItem>
                        </MudGrid>

                        <!-- Treći red: Email i OIB u dva stupca -->
                        <MudGrid Gutter="Size.None" Spacing="2">
                            <MudItem xs="12" sm="6">
                                <TextInput T="string" Label="Email" @bind-Value="ZahtjevModel.Email" Required="true"/>
                            </MudItem>
                            <MudItem xs="12" sm="6">
                                <TextInput T="string" Label="OIB" @bind-Value="ZahtjevModel.Oib" Required="true"/>
                            </MudItem>
                        </MudGrid>

                        <MudStack Class="mt-4 mb-6">
                            <RezultatObradeToggle @bind-Value="_toggle_rezultat" />
                        </MudStack>

                        <MudItem xs="12">
                            <TextAreaInput @bind-Value="ZahtjevModel.NapomenaObrade" Label="Napomena obrade" Class="mb-4" />
                        </MudItem>

                        <!-- Gumbi za Spremi i Odustani -->
                        <MudStack Row="true" Justify="Justify.FlexEnd" Spacing="3" Class="mt-4">
                            <MudButton OnClick="SubmitForm"
                                       StartIcon="@Icons.Material.Filled.Save"
                                       Size="Size.Small"
                                       Variant="Variant.Filled"
                                       Style="border: 1px solid #d3d3d3;"
                                       DropShadow="false"
                                       IconColor="Color.Success"
                                       Color="Color.Default">
                                Spremi
                            </MudButton>
                            <MudButton OnClick="Cancel"
                                       StartIcon="@Icons.Material.Filled.Cancel"
                                       Size="Size.Small"
                                       Variant="Variant.Filled"
                                       Style="border: 1px solid #d3d3d3;"
                                       DropShadow="false"
                                       IconColor="Color.Error"
                                       Color="Color.Default">
                                Odustani
                            </MudButton>
                        </MudStack>
                    </MudForm>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>
</Container>

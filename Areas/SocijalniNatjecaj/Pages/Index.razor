@page "/socijalni-natjecaj"
@using MudBlazor
@using DodjelaStanovaZG.Components.UI
@inherits IndexBase

<Container BreadcrumbItems="BreadcrumbItems">
    <MudGrid Justify="Justify.Center">
        <MudItem xs="12" sm="10" md="6" lg="5">
            <MudCard Outlined="true" Rounded="true" Class="pa-6 border border-gray-300">
                <MudCardContent>

                    <MudText Typo="Typo.subtitle2" Class="mb-4">
                        Pregled dostupnih socijalnih natječaja
                    </MudText>

                    <MudSelect T="int"
                               Label="Godina natječaja"
                               @bind-Value="SelectedId"
                               Required="true"
                               Variant="Variant.Outlined"
                               Margin="Margin.Dense"
                               Dense="true"
                               Class="mb-4 w-full">
                        @foreach (var natjecaj in Natjecaji)
                        {
                            <MudSelectItem Value="natjecaj.Id">@natjecaj.Godina</MudSelectItem>
                        }
                    </MudSelect>

                    <MudStack Row="true" Justify="Justify.FlexEnd" Spacing="2">
                        <MudButton OnClick="OnPregledajClick"
                                   StartIcon="@Icons.Material.Filled.Search"
                                   Size="Size.Small"
                                   Variant="Variant.Filled"
                                   Style="border: 1px solid #d3d3d3;"
                                   DropShadow="false"
                                   IconColor="Color.Success"
                                   Color="Color.Default">
                            Pregled
                        </MudButton>
                    </MudStack>


                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>
</Container>

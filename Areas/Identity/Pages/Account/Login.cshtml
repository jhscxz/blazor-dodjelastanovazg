@page
@using DodjelaStanovaZG.Areas.Identity.Pages.Account.Model
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model LoginModel

@{
    Layout = null;
    ViewData["Title"] = "Prijava";
}

<!DOCTYPE html>
<html lang="hr">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <link href="~/css/output.css" rel="stylesheet"/>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen">
<div class="w-full max-w-sm bg-white shadow-sm rounded p-6 border border-gray-300 hover:border-gray-400">
    <h2 class="text-xl font-semibold text-gray-800 text-center mb-4">Prijava</h2>
    <form method="post" class="space-y-4">
        <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>

        <!-- Username input -->
        <div>
            <div class="relative">
                @* Ikona za unos korisničkog imena *@
                <span class="absolute inset-y-0 start-0 flex items-center pl-3 text-gray-500">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                            <path
                                d="M10 0a10 10 0 1 0 10 10A10.011 10.011 0 0 0 10 0Zm0 5a3 3 0 1 1 0 6 3 3 0 0 1 0-6Zm0 13a8.949 8.949 0 0 1-4.951-1.488A3.987 3.987 0 0 1 9 13h2a3.987 3.987 0 0 1 3.951 3.512A8.949 8.949 0 0 1 10 18Z"/>
                        </svg>
                    </span>
                <input asp-for="Input.UserName"
                       class="w-full pl-10 p-2.5 border border-gray-300 rounded-lg text-sm focus:ring-blue-500 focus:border-blue-500"
                       autocomplete="username" required/>
            </div>
            <span asp-validation-for="Input.UserName" class="text-red-500 text-xs"></span>
        </div>

        <!-- Password input -->
        <div>
            <div class="relative">
                @* Ikona za unos lozinke *@
                <span class="absolute inset-y-0 start-0 flex items-center pl-3 text-gray-500">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd"
                                  d="M10 2a5 5 0 0 0-5 5v2H3a1 1 0 0 0-1 1v7a1 1 0 0 0 1 1h14a1 1 0 0 0 1-1v-7a1 1 0 0 0-1-1h-2V7a5 5 0 0 0-5-5zm-3 7V7a3 3 0 0 1 6 0v2H7z"
                                  clip-rule="evenodd"/>
                        </svg>
                    </span>
                <input asp-for="Input.Password" type="password"
                       class="w-full pl-10 p-2.5 border border-gray-300 rounded-lg text-sm focus:ring-blue-500 focus:border-blue-500"
                       autocomplete="current-password" required/>
            </div>
            <span asp-validation-for="Input.Password" class="text-red-500 text-xs"></span>
        </div>

        <!-- Submit button -->
        @await Html.PartialAsync("_LoginLogoutButton", new LoginLogoutButtonModel
        {
            ButtonText = "Prijavi se",
            ButtonClasses = "inline-flex items-center gap-2 bg-[#163d73] hover:bg-[#13557a] text-white font-bold text-sm py-2 px-4 rounded focus:outline-none focus:ring-2 transition",
            IconType = "login"
        })
    </form>
</div>
</body>
</html>

@page
@model DodjelaStanovaZG.Areas.Identity.Pages.Account.RegisterConfirmationModel
@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
    ViewData["Title"] = "Potvrda registracije";
}
<!DOCTYPE html>
<html lang="hr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/css/output.css" rel="stylesheet" />
    <title>@ViewData["Title"]</title>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen">
<div class="w-full max-w-md bg-white shadow-sm rounded p-6 border border-gray-300 hover:border-gray-400">
    <h2 class="text-xl font-semibold text-gray-800 text-center mb-4">Registracija uspješna</h2>
    <p class="text-gray-700">Na adresu <strong>@Model.Email</strong> poslali smo poveznicu za potvrdu računa.</p>
    <p class="text-gray-700">Prije prijave potrebno je potvrditi e-mail.</p>
</div>
</body>
</html>
@using MudBlazor
@using DodjelaStanovaZG.Enums
@using DodjelaStanovaZG.Components.UI.MudInputs
@using DodjelaStanovaZG.Components.UI.Buttons
@using Microsoft.AspNetCore.Authorization

<MudCard Outlined="true"  Class="pa-6 border border-gray-300">
    <MudCardContent>
        <MudForm @ref="_form" Model="@NewClan">
            <MudGrid>
                <MudItem xs="12" sm="6">
                    <TextInput T="string" Label="Ime i prezime" @bind-Value="NewClan.ImePrezime" Required="true"
                               Class="mb-4"/>
                </MudItem>
                <MudItem xs="12" sm="6">
                    <TextInput T="string" Label="OIB" @bind-Value="NewClan.Oib" Class="mb-4"/>
                </MudItem>

                <MudItem xs="12">
                    <DateInput Label="Datum roÄ‘enja" @bind-Value="DatumRodjenjaProxy"
                               Required="true"/>
                </MudItem>

                <MudItem xs="12">
                    @if (!IsPodnositelj)
                    {
                        <EnumSelect T="Srodstvo"
                                    @bind-Value="NewClan.Srodstvo"
                                    Label="Srodstvo"
                                    Required="true"
                                    Filter="item => item != Srodstvo.PodnositeljZahtjeva"
                                    Placeholder="Odaberi..." />
                    }
                </MudItem>

            </MudGrid>

            <FormButtons Submit="Submit"
                         Cancel="Cancel"/>

        </MudForm>
    </MudCardContent>
</MudCard>

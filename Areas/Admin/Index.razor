@page "/admin"
@attribute [Authorize(Roles = "Admin")]
@using DodjelaStanovaZG.Components.UI
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Web

<PageTitle>Admin Panel</PageTitle>

<Container Title="Admin Panel" BreadcrumbItems="breadcrumbItems">
    <div class="flex justify-center">
        <div class="mx-5">
            <SimpleCardComponent>
                <a href="/admin/users" class="block">
                    <h2 class="text-xl font-semibold mb-2 text-blue-700">Korisnici</h2>
                    <p class="text-gray-600">Upravljanje korisnicima i ulogama.</p>
                </a>
            </SimpleCardComponent>
        </div>

        <div class="mx-5">
            <SimpleCardComponent>
                <a href="/admin/settings" class="block">
                    <h2 class="text-xl font-semibold mb-2 text-blue-700">Postavke</h2>
                    <p class="text-gray-600">Konfiguracija sustava i aplikacije.</p>
                </a>
            </SimpleCardComponent>
        </div>

        <div class="mx-5">
            <SimpleCardComponent>
                <a href="/admin/reports" class="block">
                    <h2 class="text-xl font-semibold mb-2 text-blue-700">Izvještaji</h2>
                    <p class="text-gray-600">Pregled izvještaja i statistika.</p>
                </a>
            </SimpleCardComponent>
        </div>
    </div>
</Container>


@code {
    private List<Breadcrumbs.BreadcrumbItem> breadcrumbItems = new()
    {
        new Breadcrumbs.BreadcrumbItem { Text = "Home", Url = "/" },
        new Breadcrumbs.BreadcrumbItem { Text = "Admin Panel", Url = "/admin" },
    };
}

@page "/admin/users/add"
@using Microsoft.AspNetCore.Authorization
@using MudBlazor
@using DodjelaStanovaZG.Components.UI

@attribute [Authorize(Roles = "Admin,SuperAdmin")]

<Container BreadcrumbItems="BreadcrumbItems">
    <MudGrid Justify="Justify.Center">
        <MudItem xs="12" sm="10" md="6" lg="4">
            <MudCard Class="pa-6 border border-gray-300">
                <MudCardContent>
                    @if (ErrorMessages?.Any() == true)
                    {
                        <MudAlert Severity="Severity.Error" Elevation="0" Class="mb-4">
                            <ul>
                                @foreach (var msg in ErrorMessages)
                                {
                                    <li>@msg</li>
                                }
                            </ul>
                        </MudAlert>
                    }

                    <MudForm @ref="_addForm" Model="UserModel">
                        <MudText Typo="Typo.h6" Class="mb-4">Dodaj korisnika</MudText>

                        <!-- Korisničko ime -->
                        <MudTextField T="string"
                                      Label="Korisničko ime"
                                      @bind-Value="UserModel.UserName"
                                      Required="true"
                                      Variant="Variant.Outlined"
                                      Margin="Margin.Dense"
                                      Autocomplete="off"
                                      Class="mb-4" />

                        <!-- Email -->
                        <MudTextField T="string"
                                      Label="Email"
                                      @bind-Value="UserModel.Email"
                                      Required="true"
                                      Variant="Variant.Outlined"
                                      Margin="Margin.Dense"
                                      Autocomplete="off"
                                      Class="mb-4" />

                        <!-- Lozinka -->
                        <MudTextField T="string"
                                      Label="Lozinka"
                                      @bind-Value="UserModel.Password"
                                      InputType="InputType.Password"
                                      Required="true"
                                      Variant="Variant.Outlined"
                                      Margin="Margin.Dense"
                                      Autocomplete="new-password"
                                      Class="mb-4" />

                        <!-- Rola -->
                        <MudSelect T="string"
                                   Label="Rola"
                                   @bind-Value="UserModel.Role"
                                   Required="true"
                                   Variant="Variant.Outlined"
                                   Margin="Margin.Dense"
                                   Class="mb-4">
                            <MudSelectItem T="string" Value="@("Korisnik")">Korisnik</MudSelectItem>
                            <MudSelectItem T="string" Value="@("Admin")">Admin</MudSelectItem>
                            <MudSelectItem T="string" Value="@("SuperAdmin")">SuperAdmin</MudSelectItem>
                        </MudSelect>

                        <!-- Gumbi u MudStack -->
                        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2" Class="mt-4">
                            <MudButton OnClick="@SubmitForm"
                                       StartIcon="@Icons.Material.Filled.Save"
                                       Variant="Variant.Filled"
                                       Color="Color.Primary"
                                       Style="min-width: 120px; background-color: #163d73; color: white;">
                                Spremi
                            </MudButton>
                            <MudButton OnClick="@Cancel"
                                       StartIcon="@Icons.Material.Filled.Cancel"
                                       Variant="Variant.Outlined"
                                       Color="Color.Default"
                                       Style="min-width: 120px;">
                                Odustani
                            </MudButton>
                        </MudStack>
                    </MudForm>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>
</Container>
